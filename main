public UserBean getUser(int userId) {
    	UserBean userBean = new UserBean();
        try {
        	String sql = "SELECT * FROM users WHERE userid=?";
            PreparedStatement ps = ConnectionProvider.getConnection().
                    prepareStatement(sql);
            ps.setInt(1, userId);
            ResultSet rs = ps.executeQuery();

            if (rs.next()) {
            	userBean.setId(rs.getInt("userid"));
            	userBean.setfName(rs.getString("firstname"));
            	userBean.setlName(rs.getString("lastname"));                           
            }
        } catch (SQLException e) {
            e.printStackTrace();
        }
        return userBean;
    }

	public void editUser(UserBean user) throws SQLException {
		String sql = "update users set firstname=?, lastname=? where userid=?";
    	Connection conn = ConnectionProvider.getConnection();
    	PreparedStatement ps = conn.prepareStatement(sql);
    	ps.setString(1, user.getfName());
    	ps.setString(2, user.getlName());
    	ps.setInt(3, user.getId());
    	
    	ps.executeUpdate();
	}
